<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="-5dp"
        android:text="Flying Fish"
        android:fontFamily="@font/metalmaniaregular"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="60dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fishsplash"
        android:layout_width="270dp"
        android:layout_height="268dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="149dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fishm"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/fishsplash"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading"
        android:fontFamily="@font/redokaneegular"
        android:text="Developed By - Himanshu Suman"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textSize="20sp" />

</RelativeLayout>